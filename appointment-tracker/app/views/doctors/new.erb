<h1>Enter a new doctor here</h1>

<%= form_tag doctors_path do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
    <%= label_tag :specialty %>
    <%= text_field_tag :specialty %>
    <%= submit_tag :submit %>
<% end %>

<%= form_for @doctor do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :specialty %>
    <%= f.text_field :specialty %>
    <%= f.submit %>
<% end %>